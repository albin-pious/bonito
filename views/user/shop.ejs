                            <a href="/product_detailes/${product._id}" class="btn btn-sm text-dark p-0"><i class="fas fa-eye text-primary mr-1"></i>View Detail</a>
                            <a href="" class="btn btn-sm text-dark p-0"><i class="fas fa-heart text-primary mr-1"></i>Save Product</a>
                        </div>
                    </div>
                </div>
            `);
        });
        productContainer.append(`
            <div class="col-12 pb-1">
                <nav aria-label="Page navigation">
                    <ul class="pagination justify-content-center mb-3">
                        <li class="page-item">
                            <% if(currentPage === 1){ %>
                                <button class="page-link"  aria-label="Previous">
                                    <span aria-hidden="true">&laquo;</span>
                                    <span class="sr-only">Previous</span>
                                </button>
                            <% }else{ %>
                                <a class="page-link" href="/bonito_shop?page=${ currentPage-1 }" aria-label="Previous">
                                    <span aria-hidden="true">&laquo;</span>
                                    <span class="sr-only">Previous</span>
                                </a>
                            <% } %>
                        </li>
                        <% for(let i=1;i<=pages;i++){ %>
                            <% if(i === currentPage){ %>
                                <li class="page-item active"><button class="page-link"><%= i %></button></li>
                            <% }else{ %>
                                <li class="page-item"><a class="page-link" href="/bonito_shop?page=<%= i %>"><%= i %></a></li>
                            <% } %>
                        <% } %>
                        <li class="page-item">
                            <% if(currentPage === pages){ %>
                                <button class="page-link" aria-label="Next">
                                    <span aria-hidden="true">&raquo;</span>
                                    <span class="sr-only">Next</span>
                                </button>
                            <% }else{ %>
                                <a class="page-link" href="/bonito_shop/<% currentPage+1 %>" aria-label="Next">
                                    <span aria-hidden="true">&raquo;</span>
                                    <span class="sr-only">Next</span>
                                </a>
                            <% } %>
                        </li>
                    </ul>
                </nav>
            </div>
        `)
    }

    </script>

