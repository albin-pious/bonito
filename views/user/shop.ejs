                        target.classList.remove('show');
                    } else {
                        target.classList.add('show');
                    }
                });
            });

            // Function to handle checkbox changes and filter products
            $(document).ready(function () {
                function filterProducts() {
                console.log('Filter function triggered');
                console.log('hai');
                const selectedPrices = [];
                const selectedBrands = [];
                const selectedSizes = [];

                // Check if "All" checkboxes are checked
                const isPriceAllChecked = $('#price-all').prop('checked');
                const isBrandAllChecked = $('#brand-all').prop('checked');
                const isSizeAllChecked = $('#size-all').prop('checked');

                // Find checked checkboxes and collect their values
                if(!isPriceAllChecked){
                    $('input[name="prices"]:checked').each(function () {
                        selectedPrices.push($(this).val());
                    });
                }

                if(!isBrandAllChecked){
                    $('input[name="brands"]:checked').each(function () {
                        selectedBrands.push($(this).val());
                    });
                }

                if(!isSizeAllChecked){
                    $('input[name="sizes"]:checked').each(function () {
                        selectedSizes.push($(this).val());
                    });
                }

                console.log('Hai',selectedBrands,selectedPrices,selectedSizes);
                console.log('Data sent in the AJAX request', selectedPrices, selectedBrands, selectedSizes);
                $.ajax({
                    url: '/filter',
                    method: 'POST',
                    data: {
                        prices: selectedPrices,
                        brands: selectedBrands,
                        sizes: selectedSizes
                    },
                    success: function (response) {
                        console.log('response is: ', response);
            
                        // Update the product display with filtered results
                        if (response && response.success && response.productData) {
                            console.log('success');
                            // Assuming response.productData contains the filtered products array
                            const filteredProducts = response.productData;
                            const currentPage = response.currentPage;
                            const totalDocument = response.totalDocument;
                            const pages = response.pages;
                            console.log('response',response);
                            // Perform operations to update the product display using filteredProducts
                            // For example:
                            updateUIWithFilteredProducts(filteredProducts,currentPage,totalDocument,pages);
                            } else {
                                console.error('Invalid response format or no products found.');
                            }
                        },
                        error: function (err) {
                            console.error('Error:', err);
                            // Handle error scenarios
                        }
                    });

                }

                // Listen for checkbox changes and call the filter function
                $('input[type="checkbox"]').on('change', filterProducts);
            });
            
