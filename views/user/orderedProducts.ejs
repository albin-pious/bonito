<!-- Products Start -->
<% if(products && products.length>0){ %>
<div class="container-fluid pt-5">
    <div class="text-center mb-4">
        <h2 class="section-title px-5"><span class="px-2">Product Ordered.</span></h2>
    </div>
    <div class="row px-xl-5 pb-3">
        <% products.forEach((data)=>{ %>
            <div class="col-lg-3 col-md-6 col-sm-12 pb-1 m-auto">
                <div class="card product-item border-1 mb-4" style="width: 18rem;">
                    <div class="card-header product-img position-relative overflow-hidden bg-transparent border p-0">
                        <img class="card-img-top w-100" src="/uploads/<%= data.product.images[0] %>" alt="Product-Image">
                    </div>
                    <div class="card-body border-left border-right text-center p-0 pt-4 pb-3">
                        <h6 class="text-truncate mb-3"><%= data.product.title %></h6>
                        <div class="d-flex justify-content-center">
                            <h6>&#8377;<%= data.product.price %></h6><h6 class="text-muted ml-2"><%= data.product.offer %>%</h6>
                        </div>
                    </div>
                    <div class="card-footer d-flex justify-content-center bg-light border">
                        <a href="/product_detailes/<%= data.product._id %>" class="btn btn-sm text-dark p-0"><i class="fas fa-eye text-primary mr-1"></i></a>
                    </div>
                </div>
            </div>
    <% }) %>
    </div>
</div>
<% }else{ %>
    <p class="text-danger">No Product Data.</p>
<% } %>
