     <div class="container mt-5">
        <div class="row tm-content-row justify-content-center">
            <div class="col-lg-10">
                <div class="tm-bg-primary-dark tm-block tm-block-product-categories">
                    <h2 class="tm-block-title">Product Categories</h2>
                    <span class="text-warning mb-3"><%= title %></span>
                    
                    <!-- Check if data is not empty before rendering the table -->
                    <% if (data.length > 0) { %>
                    <div class="tm-product-table-container">
                        <table class="table tm-table-small tm-product-table">
                            <tbody>
                                <% data.forEach(function(category) { %>
                                <tr>
                                    <td class="tm-product-name"><%= category.categoryName %></td>
                                    <td class="text-center">
                                        <a href="/admin/category_edit/<%=category._id%>" class="tm-product-edit-link">
                                            <i class="far fa-edit tm-product-edit-icon" style="color: red; font-size: 20px;"></i>
                                        </a>
                                        &nbsp;&nbsp;&nbsp;
                                        <a href="/admin/category_delete/<%=category._id%>" class="tm-product-delete-link" onclick="return confirmDelete()">
                                            <i class="far fa-trash-alt tm-product-delete-icon"></i>
                                        </a>
                                    </td>
                                </tr>
                                <% }); %>
                            </tbody>
                        </table>
                    </div>
                    <% } else { %>
                    <!-- Display a message when data is empty -->
                    <p>No categories found.</p>
                    <% } %>
                    
                    <a href="/admin/category_create">
                        <button class="btn btn-primary m-auto text-uppercase mb-3 tm-reduced-width">Add new category</button>
                    </a>
                </div>
            </div>
        </div>
