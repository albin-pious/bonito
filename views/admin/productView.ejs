  <script>
    // nav dropdown item
    $(function () {
      // Initialize Bootstrap components here
      $('[data-toggle="dropdown"]').dropdown();
    
      // Other code for charts and functionality
    });

    $(function() {
      $(".tm-product-name").on("click", function() {
        window.location.href = "edit-product.html";
      });
    });
   
    // paginatation
    $(function() {
      // Handle the click event for the "Edit" button
      $(".tm-product-edit-link").on("click", function(e) {
        e.preventDefault(); // Prevent the default link behavior
        // Get the product name from the corresponding row
        var productName = $(this).closest("tr").find(".tm-product-name").text();
        // Redirect to the edit-product.html page with the product name as a query parameter
        window.location.href = "edit-product.html?product=" + encodeURIComponent(productName);
      });
    });

    async function deleteProduct(productId,event) {
      event.preventDefault();
      const confirmed = confirm('Are you sure you want to delete this product?');
      if(confirmed){
        try {
          const response = await fetch(`/admin/product_delete/${productId}`,{
            method: 'DELETE'
          })

          if (response.ok){
            console.log('Category deleted successfully.');
            window.location.reload();
          }else{
            throw new Error('Network response was not ok');
          }
        } catch (error) {
          console.error('Error deleting category: ',error);
        }
      }
    }

    function deleteSelectedProducts(){
      const confirmed = confirm('Are you sure do you want delete these products.');
      if(confirmed){
        const productCheckboxes = document.querySelectorAll('.productCheckbox');
        const seletedProductIds = Array.from(productCheckboxes)
        .filter(checkbox => checkbox.checked)
        .map(checkbox => checkbox.value);
      
        const selectedIdsString = seletedProductIds.join(',');
        fetch(`/admin/delete_selected_products/${selectedIdsString}`,{
          method:'DELETE',
          headers: {
            'Content-Type': 'application/json'
          },
          body: JSON.stringify({ productIds: seletedProductIds })
        })
        .then(response => response.json())
        .then(data => {
          console.log('Server response: ',data);
          window.location.reload();
        })
        .catch(error => {
          console.error('Error ',error);
        })
      }
    }

  </script>
