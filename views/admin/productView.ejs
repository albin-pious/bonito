  <div class="container mt-5">
    <div class="row tm-content-row">
      <div class="col-sm-12 col-md-12 col-lg-12 col-xl-8 tm-block-col m-auto">
        <div class="tm-bg-primary-dark tm-block tm-block-products">
          <div class="tm-product-table-container table-responsive table-striped">
            <% if(productData && productData.length > 0){ %>
              <table class="table table-hover tm-table-small tm-product-table">
                <thead>
                  <tr>
                    <th scope="col">&nbsp;</th>
                    <th scope="col">PRODUCT IMAGE</th>
                    <th scope="col">NAME</th>
                    <th scope="col">PRICE</th>
                    <th scope="col">BRAND</th>
                    <th scope="col">QUANTITY</th>
                    <th scope="col">ACTION</th>
                    <th scope="col">&nbsp;</th>
                  </tr>
                </thead>
                <tbody>
                  <% productData.forEach(product =>{ %>
                    <tr>
                      <th scope="row"><input type="checkbox" class="productCheckbox" value="<%= product._id %>" /></th>
                      <td class="tm-product-name img-fluid"><img src="/uploads/<%= product.images[0] %>" alt="Product Image" width="100px" height="100px"></td>
                      <td><%= product.title %></td>
                      <td><%= product.price %></td>
                      <td>
                        <% const brand = brandData.find(brand => brand._id.toString() === product.brand.toString()); %>
                        <%= (brand && brand.brandName) ? brand.brandName : 'N/A' %>
                      </td>
                      <td><%= product.stock %></td>
                      <td>
                        <a href="/admin/product_edit/<%= product._id %>" class=" text-danger">
                          <i class="far fa-edit tm-product-edit-icon"></i> Edit
                        </a>
                      </td>
                      <td>
                        <a href="/admin/product_delete/<%= product._id %>" class="tm-product-delete-link" onclick="deleteProduct('<%= product._id %>',event)">
                          <i class="far fa-trash-alt tm-product-delete-icon"></i>
                        </a>
                      </td>
                    </tr>
                  <% }) %>  
                </tbody>
              </table>   
            
          </div>
          <div class="d-flex justify-content-center mt-2 mb-1">
            <div class="demo" data-current-page="<%= currentPage %>" data-total-pages="<%= pages %>">
              <nav class="pagination-outer" aria-label="Page navigation">
                <ul class="pagination">
                  <li class="page-item">
                    <% if(currentPage === pages){ %>
                      <a href="#" class="page-link" aria-label="Previous" id="prevPage">
                        <span aria-hidden="true">»</span>
                      </a>
                    <% }else{ %>  
                      <a href="/admin/productlist?page=<%= currentPage+1 %>" class="page-link" aria-label="Previous" id="prevPage">
                         <span aria-hidden="true">»</span>
                       </a>
                    <% } %>   
                  </li>
                  <% for(let i=1;i<=pages;i++){ %>  
                    <% if(i === currentPage){ %>     
                      <li class="page-item active"><a class="page-link" href="/admin/productlist?page=<%= i %>"><%= i %></a></li>    
                    <% }else{ %> 
                      <li class="page-item"><a class="page-link" href="/admin/productlist?page=<%= i %>"><%= i %></a></li>
                    <% } %>
                  <% } %>                  
                      <li class="page-item">
                        <%if(currentPage === 1){ %>
