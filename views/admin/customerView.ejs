  // block and unblock functionality
document.addEventListener('DOMContentLoaded', async () => {
    const customerTable = document.querySelector('.table');

    customerTable.addEventListener('change', async (event) => {
        const targetCheckbox = event.target;

        if (targetCheckbox.type === 'checkbox' && (targetCheckbox.value === 'block' || targetCheckbox.value === 'unblock')) {
            const userId = targetCheckbox.getAttribute('data-user-id');
            const action = targetCheckbox.value;

            try {
                // Fetch the response from the server
                const response = await fetch(`/admin/customerlist/${action}/${userId}`, { method: 'PUT' });

                if (!response.ok) {
                    throw new Error('Network response was not ok');
                }

                const responseBody = await response.json();

                console.log('Raw response:', responseBody);

                // Uncheck the opposite checkbox based on the action
                const oppositeCheckbox = action === 'block' ? targetCheckbox.parentElement.nextElementSibling.querySelector('input[type="checkbox"]') : targetCheckbox.parentElement.previousElementSibling.querySelector('input[type="checkbox"]');
                oppositeCheckbox.checked = false;

                // Call the toggleUserStatus function with the response
                await toggleUserStatus(userId, action, responseBody);

                // Rest of the code to update UI based on the response
                const parentRow = targetCheckbox.closest('tr');

                if (responseBody.blocked) {
                    parentRow.classList.add('blocked');
                    parentRow.classList.remove('unblocked');
                } else {
                    parentRow.classList.remove('blocked');
                    parentRow.classList.add('unblocked');
                }

            } catch (error) {
                console.log('Error occurred:', error);
            }
        }
    });
});

const toggleUserStatus = async (userId, action, responseBody) => {
    try {
        console.log('Response body:', responseBody);

        if (responseBody) {
            console.log(`User ${action}ed successfully. Message: ${responseBody.message}`);
            return responseBody;
        } else {
            console.log('Response was empty.');
            return null;
        }
    } catch (error) {
        console.error(`Error ${action}ing User:`, error);
        return null;
    }
};



     
