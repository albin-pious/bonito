                <span><a href="/admin/coupon_create" class="text-warning">Add New Coupons</a></span>
                    <% if(couponData && couponData.length > 0 ){ %>
                        <div class="table-responsive">
                            <table class="table table-striped">
                                <thead>
                                    <tr class="text-center">
                                        <th>Coupon Name</th>
                                        <th>Coupon Code</th>
                                        <th>Coupon Offer</th>
                                        <th>Expiry Date</th>
                                        <th>Brand</th>
                                        <th>Category</th>
                                        <th>Used</th>
                                        <th>Status</th>
                                        <th>Action</th>                             
                                    </tr>
                                </thead>
                                <tbody>
                                    <% couponData.forEach((x)=>{ %>
                                    <tr class="text-center">
                                        <td class="text-center"><%= x.couponName %></td>
                                        <td><%= x.couponCode %></td>
                                        <td><%= x.couponOffer %>&percnt;</td>
                                        <td><%= x.expireDate %></td>
                                        <td>
                                            <% if(x.brand){ %>
                                                <%= x.brand %>
                                            <% }else{ %>
                                                ALL
                                            <% } %>
                                        </td>
                                        <td><% if(x.category){ %>
                                            <%= x.category %>
                                            <% }else{ %>
                                                ALL
                                            <% } %>
                                        </td>
                                        <td><%= x.usedBy %></td>
                                        <td><%= x.status %></td>
                                        <td>
                                            <a href="/admin/coupon_editpage/<%= x._id %>" class="text-danger p-1">
                                                <i class="far fa-edit tm-product-edit-icon"></i><small>Edit</small>
                                            </a>
                                            <a href="/admin/coupon_delete/<%= x._id %>" class="text-danger p-1">
                                                <i class="far fa-edit tm-product-edit-icon" onclick="deleteCoupon('<%= x._id %>',event)"></i><small>Delete</small>
                                            </a>
                                        </td>
                                    </tr>
                                    <% }) %>
                                </tbody>
                            </table>
                        </div>
                        <div class="d-flex justify-content-center mt-2 mb-1">
                            <div class="demo" data-current-page="<%= currentPage %>" data-total-pages="<%= pages %>">
                                <nav class="pagination-outer" aria-label="Page navigation">
                                <ul class="pagination">
                                    <li class="page-item">
                                    <% if(currentPage === pages){ %>
                                        <a href="#" class="page-link" aria-label="Previous" id="prevPage">
                                        <span aria-hidden="true">»</span>
                                        </a>
                                    <% }else{ %>  
                                        <a href="/admin/productlist?page=<%= currentPage+1 %>" class="page-link" aria-label="Previous" id="prevPage">
                                            <span aria-hidden="true">»</span>
                                        </a>
                                    <% } %>   
                                    </li>
                                    <% for(let i=1;i<=pages;i++){ %>  
                                    <% if(i === currentPage){ %>     
                                        <li class="page-item active"><a class="page-link" href="/admin/productlist?page=<%= i %>"><%= i %></a></li>    
                                    <% }else{ %> 
                                        <li class="page-item"><a class="page-link" href="/admin/productlist?page=<%= i %>"><%= i %></a></li>
                                    <% } %>
                                    <% } %>                  
                                    <li class="page-item">
                                    <%if(currentPage === 1){ %>
                                        <a href="#" class="page-link" aria-label="Next" id="nextPage">
                                        <span aria-hidden="true">«</span>
                                        </a>
                                    <% }else{ %>  
                                        <button disabled id="nextPage">
                                        <span aria-hidden="true">«</span>
                                        </button>
                                    <% } %>  
                                    </li>
                                </ul>
                                </nav>
