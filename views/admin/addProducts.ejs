    <div class="container tm-mt-big tm-mb-big">
      <div class="row">
        <div class="col-xl-9 col-lg-10 col-md-12 col-sm-12 mx-auto">
          <div class="tm-bg-primary-dark tm-block tm-block-h-auto">
            <div class="row">
              <div class="col-12">
                <!-- Breadcrumb -->
                <ol class="breadcrumb tm-bg-primary-dark">
                  <li class="breadcrumb-item"><a href="/admin/productlist">Products</a></li>
                  <li class="breadcrumb-item active">Add Product</li>
                </ol>
                <!-- End Breadcrumb -->
                <h2 class="tm-block-title d-inline-block">Add Product</h2>
              </div>
            </div>
            <div class="row tm-edit-product-row">
              <div class="col-xl-6 col-lg-6 col-md-12">
                <form action="/admin/addproducts" method="post" class="tm-edit-product-form">
                  <div class="form-group mb-3">
                    <label for="name">Product Name</label>
                    <input
                      id="name"
                      name="name"
                      type="text"
                      class="form-control validate"
                      required
                    />
                  </div>
                  <div class="form-group mb-3">
                    <label for="description">Description</label>
                    <textarea class="form-control validate" rows="3" name="description" required></textarea>
                  </div>
                  <div class="form-group mb-3">
                    <label for="category">Category</label>
                    <select class="custom-select tm-select-accounts" id="category" name="category">
                      <option selected>Select category</option>
                      <% if (Array.isArray(catData)) { %>
                        <% catData.forEach((category) => { %>
                          <option value="<%= category._id %>"><%= category.categoryName %></option>
                        <% }) %>
                      <% } %>
                    </select>
                  </div>
                  <!-- Radio buttons for Men and Women -->
                  <div class="form-group mb-3">
                    <label>Gender</label>
                    <div class="custom-control custom-radio">
                      <input
                        type="radio"
                        id="men"
                        name="gender"
                        class="custom-control-input"
                      />
                      <label class="custom-control-label" for="men">Men</label>
                    </div>
                    <div class="custom-control custom-radio">
                      <input
                        type="radio"
                        id="women"
                        name="gender"
                        class="custom-control-input"
                      />
                      <label class="custom-control-label" for="women">Women</label>
                    </div>
                  </div>
                  <!-- End Radio buttons -->
                  <!-- Price and Offer Price -->
                  <div class="row">
                    <div class="form-group mb-3 col-xs-12 col-sm-6 col-md-4">
                      <label for="price">Price</label>
                      <input
                        id="price"
                        name="price"
                        type="text"
                        class="form-control validate"
                        required
                      />
                    </div>
                    <div class="form-group mb-3 col-xs-12 col-sm-6 col-md-4">
                      <label for="offer_price">Offer Price</label>
                      <input
                        id="offer_price"
                        name="offer_price"
                        type="text"
                        class="form-control validate"
                      />
                    </div>
                    <div class="form-group mb-3 col-md-4">
                      <label for="stock">Units In Stock</label>
                      <input
                        id="stock"
                        name="stock"
                        type="text"
                        class="form-control validate"
                        required
                      />
                    </div>
                    <!-- Sizes -->
                    <div class="form-group mb-3">
                      <label>Sizes</label>
                      <div class="custom-control custom-checkbox">
                        <input
                          type="checkbox"
                          id="size_s"
                          name="size_s"
                          class="custom-control-input"
                        />
                        <label class="custom-control-label" for="size">S</label>
                      </div>
                    <div class="custom-control custom-checkbox">
                      <input
                        type="checkbox"
                        id="size_m"
                        name="size_m"
                        class="custom-control-input"
                      />
                      <label class="custom-control-label" for="size">M</label>
                    </div>
                    <div class="custom-control custom-checkbox">
                      <input
                        type="checkbox"
                        id="size_l"
                        name="size_l"
                        class="custom-control-input"
                      />
                      <label class="custom-control-label" for="size">L</label>
                    </div>
                    <div class="custom-control custom-checkbox">
                      <input
                        type="checkbox"
                        id="size_xl"
                        name="size_xl"
                        class="custom-control-input"
                      />
                      <label class="custom-control-label" for="size">XL</label>
                    </div>
                    <div class="custom-control custom-checkbox">
                      <input
                        type="checkbox"
                        id="size_xxl"
                        name="size_xxl"
                        class="custom-control-input"
                      />
                      <label class="custom-control-label" for="size">XXL</label>
                    </div>
                  </div>
                  <!-- End Sizes -->
                  <!-- Color -->
                  <div class="form-group mb-3">
                    <label for="color">Color</label>
                    <input
                      id="color"
                      name="color"
                      type="text"
                      class="form-control"
                      required
                    />
                  </div>
                  <!-- End Color -->
                </div>
              </form>
            </div>
            <div class="col-xl-6 col-lg-6 col-md-12 mx-auto mb-4">
              <div class="tm-product-img-dummy mx-auto">
                <i
                  class="fas fa-cloud-upload-alt tm-upload-icon"
                  onclick="document.getElementById('fileInput').click();"
                ></i>
              </div>
              <div class="custom-file mt-3 mb-3">
                <input id="fileInput" type="file" style="display:none;" multiple/>
                <input
                  type="button"
                  class="btn btn-primary btn-block mx-auto"
